@model Aspnetuser
@{
    Layout="_login_and_forgotpassword";
}
<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <style>
        
    </style>
</head>

<body>
    
        <div class="col-12">
            <div class="background"></div>
            <div class=" row justify-content-end align-top">
                <div class="col-1 ">
                    <button class="btn btn-outline-dark " onclick="darkMode()" type="button">
                        <img src="/SRS Screen Shorts/dark_mode_black_24dp.svg" class=" " alt="dark-mode-icon">
                    </button>
                </div>
            </div>
            <div class="row align-middle justify-content-center" >
                <div class="col-lg-6 col-md-7  col-sm-8 col-9">
                    <div class="row">
                        <img src="/SRS Screen Shorts/HalloDoc LOGO.png" class="img-fluid " alt="logo here">
                    </div>
                    <div class="row">
                        <div style="font-size:45px;">Login To Your Account</div>
                    </div>
                    <form method="post" >
                        <div class="row">
                            <div class=" d-flex align-items-center form-control form-floating mb-3 p-1">
                                <input type="text" asp-for="Username" name="username" class="form-control input_field" id="floatingInput" placeholder=""
                                    style="border: none;">
                                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor"
                                    class="bi bi-person" viewBox="0 0 16 16">
                                    <path
                                        d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0m4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4m-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10s-3.516.68-4.168 1.332c-.678.678-.83 1.418-.832 1.664z" />
                                </svg>
                                <label for="floatingInput" class="">Username</label>
                            </div>
                            <div class="d-flex align-items-center form-control form-floating mb-3 p-1">
                                <input type="password" asp-for="Passwordhash" class="form-control input_field" id="floatingPassword" placeholder=""
                                    style="border:none">
                                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor"
                                    class="bi bi-eye" viewBox="0 0 16 16">
                                    <path
                                        d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8M1.173 8a13 13 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5s3.879 1.168 5.168 2.457A13 13 0 0 1 14.828 8q-.086.13-.195.288c-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5s-3.879-1.168-5.168-2.457A13 13 0 0 1 1.172 8z" />
                                    <path
                                        d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5M4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0" />
                                </svg>
                                <label for="floatingPassword" class="">Password</label>
                            </div>
                        </div>
                    
                    <div class="row mx-1 mb-3">
                        <button type="submit" class="button bg-info border-0 p-2 ">
                            <span style="color:white">Log-In</span>
                        </button>
                    </div>
                </form>
                    <div class="row d-flex">
                        <a href="/Home/forgot_password_page" class="d-flex justify-content-center"
                            style="color:rgb(0, 183, 255)">
                            Forgot Password?
                        </a>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-center " >
                
                <a href="#" class="  text-muted text-decoration-none">Terms & Conditions</a>
                <span class="text-muted mx-1">|</span>
                <a href="#" class="text-muted text-decoration-none">Privacy Policy</a>
            </div>
        </div>
    
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
</body>     
</html>